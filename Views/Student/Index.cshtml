@model IEnumerable<AssignmentConsole.Model.Student>

@{
    ViewData["Title"] = "Student List";
}

<h2>Student List</h2>

<p>
    <a href="@Url.Action("Create")">Create New Student</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Roll No</th>
            <th>Name</th>
            <th>Semester</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model) {
            <tr>
                <td>@student.Id</td>
                <td>@student.RollNo</td>
                <td>@student.Name</td>
                <td>@student.Semester</td>
            </tr>
        }
    </tbody>
</table>